{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "localhost (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}/build/Debug/MqttListener",
      "program": "${workspaceFolder}/build/Debug/MqttListener/MqttListener",
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [{ "text": "-enable-pretty-printing" }]
    },
    {
      "name": "localhost (lldb)",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}/build/Debug/MqttListener",
      "program": "${workspaceFolder}/build/Debug/MqttListener/MqttListener",
      "args": [
        "--mqtt_endpoint", "tcp://localhost:1883"
      ]
    }
  ]
}
